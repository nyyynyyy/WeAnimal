<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsc.cactus.com.weanimal.e_set.Set_birthday_gender"
    android:background="@drawable/background_orange">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="몇 가지 질문을 하겠습니다."
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:textColor="#fd6029"
            android:textSize="25dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="성별"
            android:id="@+id/textView4"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textColor="#fd6029" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:id="@+id/a5_1_radio_male"
                android:checked="false"
                style="1"
                android:layout_gravity="center_horizontal"
                android:textColor="#fd6029" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"
                android:id="@+id/a5_1_radio_femeal"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                style="1"
                android:layout_marginLeft="50dp"
                android:textColor="#fd6029" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="#fd6029" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="생년월일 선택"
            android:id="@+id/a5_1_txt_birthday"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="#fd6029" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/a5_1_btn_ok"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#fd6029"
            android:textSize="25dp"
            android:textColor="#fdc600" />

    </LinearLayout>

</RelativeLayout>

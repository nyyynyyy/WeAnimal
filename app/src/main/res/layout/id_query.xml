<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsc.cactus.com.weanimal.c_login.Id_query"
    android:id="@+id/rootContainer"
    android:background="@drawable/background_blue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위애니멀"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textColor="#fffd00"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView android:text="경험해보셨습니까?" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="[계정이 존재하는가?]"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#d7d7d7"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:focusableInTouchMode="false"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="네"
                android:id="@+id/a3_btn_yes"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView2"
                style="@style/Base.Widget.AppCompat.ActionButton.CloseMode"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="아니요"
                android:id="@+id/a3_btn_no"
                android:layout_alignTop="@+id/a3_btn_yes"
                android:layout_alignEnd="@+id/textView2"
                style="@style/Base.Widget.AppCompat.ActionButton.CloseMode"
                android:layout_marginLeft="50dp"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
